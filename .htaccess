<IfModule mod_rewrite.c>
	RewriteEngine on
    RewriteCond %{HTTP_HOST} ^eipr\.com\.co$ [OR]
    RewriteCond %{HTTP_HOST} ^www\.eipr\.com\.co$
    RewriteRule ^aplicativo$ "http\:\/\/190\.14\.251\.189\:8088\/" [R=301,L]

    # Reglas de direccionamiento a sitio seguro ssl para el aplicativo eipr
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteCond %{REQUEST_FILENAME}.php -f
	RewriteRule ^(.*)$ $1.php

    RewriteRule ^ChangePassword/([0-9]+)$ UpdatePassword.php?param=$1 [L]
    RewriteRule ^Password/.* RecoveryPassword.php?param=$1 [L]

    # Especificar códificación de caracteres
    # AddDefaultCharset utf-8

    # Bloquear Bots
    RewriteCond %{HTTP_USER_AGENT} ^BlackWidow [OR]
    RewriteCond %{HTTP_USER_AGENT} ^Zeus
    RewriteRule .* - [F]

    # Mensaje de error personalizado en ubicación local
    ErrorDocument 404 https://eipr.com.co/404
</IfModule>
